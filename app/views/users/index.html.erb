<div class="container main-container">
<div class="banner"></div>
<div class="col-md-offset-3 col-md-6">
<%= form_for @user,validate:true do |f| %>
  <div class="modal-header header-user">
                <h3 class="modal-title-site text-center"> REGISTER </h3>
            </div>
            <div class="modal-body">
                <div class="control-group"><a class="fb_button btn  btn-block btn-lg " href="#"> SIGNUP WITH
                    FACEBOOK </a></div>
                <h5 style="padding:10px 0 10px 0;" class="text-center"> OR </h5>

                <div class="form-group reg-username">
                    <div>
                         <%= f.text_field :name,placeholder: 'Enter Name',class: 'form-control'%>
                    </div>
                </div>
                <div class="form-group reg-email">
                    <div>
                       <%= f.password_field :password,placeholder: 'Enter Password',class: 'form-control',validate: false %>
                    </div>
                </div>
                <div class="form-group reg-password">
                    <div>
                        <%= f.password_field :password_confirmation,placeholder: 'Enter Password',class: 'form-control' %>
                    </div>
                </div>
                <div>
                    <div>
                        <%= f.submit "REGISTER",:class => "btn  btn-block btn-lg btn-primary" %>
                    </div>
                </div>
                <!--userForm-->

            </div>
<% end %>
</div>
</div>