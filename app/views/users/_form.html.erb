<%= form_for @user do |f| %>
  <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> &times; </button>
                <h3 class="modal-title-site text-center"> REGISTER </h3>
            </div>
            <div class="modal-body">
                <div class="control-group"><a class="fb_button btn  btn-block btn-lg " href="#"> SIGNUP WITH
                    FACEBOOK </a></div>
                <h5 style="padding:10px 0 10px 0;" class="text-center"> OR </h5>

                <div class="form-group reg-username">
                    <div>
                         <%= f.text_field :name,placeholder: 'Enter Name',class: 'form-control'%>
                    </div>
                </div>
                <div class="form-group reg-email">
                    <div>
                       <%= f.password_field :password,placeholder: 'Enter Password' %>
                    </div>
                </div>
                <div class="form-group reg-password">
                    <div>
                        <%= f.password_field :password_confirmation,placeholder: 'Enter Password' %>
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <div class="checkbox login-remember">
                            <label>
                                <input name="rememberme" id="rememberme" value="forever" checked="checked"
                                       type="checkbox">
                                Remember Me </label>
                        </div>
                    </div>
                </div>
                <div>
                    <div>
                        <%= f.submit "REGISTER",:class => "btn  btn-block btn-lg btn-primary" %>
                    </div>
                </div>
                <!--userForm-->

            </div>
            <div class="modal-footer">
                <p class="text-center"> Already member? <a data-toggle="modal" data-dismiss="modal" href="#ModalLogin">
                    Sign in </a></p>
            </div>
<% end %>
