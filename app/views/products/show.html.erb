<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a onclick = "window.location='<%= store_path %>'">Home</a></li>
                <li class="active"><%= @product.title %></li>
            </ul>
        </div>
    </div>
    <div class="row transitionfx">

        <!-- left column -->
        <div class="col-lg-6 col-md-6 col-sm-6">
            <!-- product Image and Zoom --><img
                        src="<%= image_path(@product.image_url) %>" class="img-responsive" alt="img">
        </div>
        <!--/ left column end -->


        <!-- right column -->
        <div class="col-lg-6 col-md-6 col-sm-5">

            <h1 class="product-title"> <%= @product.title %></h2>
                <div class="product-price">
                    <span class="price-sales"> <%= number_to_currency(@product.price) %></span>
                </div>

                <div class="details-description">
                    <p><%= @product.description  %> </p>
                </div>
                <!--/.color-details-->

                <div class="cart-actions">
                    <div class="addto row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <%= button_to 'Add to cart', add_to_path(product_id: @product.id),
                                          remote: true , :class => "btn-block btn-primary btn-cart"%>
                        </div>
                    </div>
                    <div style="clear:both"></div>
                </div>
                <!--/.cart-actions-->

                <div class="clear"></div>
                <!--/.product-tab-->

                <div style="clear:both"></div>

                <div class="product-share clearfix">
                    <p> SHARE </p>

                    <div class="socialIcon">
                        <a href="#"> <i class="fa fa-facebook"></i></a>
                        <a href="#"> <i class="fa fa-twitter"></i></a>
                        <a href="#"> <i class="fa fa-google-plus"></i></a>
                        <a href="#"> <i class="fa fa-pinterest"></i></a></div>
                </div>
                <!--/.product-share-->

        </div>
        <!--/ right column end -->

    </div>
    <!--/.row-->
    <!--/.recommended-->


    <div style="clear:both"></div>


</div>
<!-- /main-container -->


<div class="gap"></div>
