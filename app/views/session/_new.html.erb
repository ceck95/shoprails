<%= form_tag({controller: "session", action: "new"}, method: "post",validate: true) do %>
	<div class="form-group login-username">
        <div>
		<%= text_field_tag :name, params[:name],:class => "form-control input" ,:placeholder => "Enter Username",:size => 75 ,:id => "login-user"%>
		</div>
	</div>
	<div class="form-group login-password">
        <div>
		<%= password_field_tag :password, params[:password],:class => "form-control input",:id => "login-password",:size => 20,:placeholder => "Password"%>
		</div>
	</div>
	<div>
		<div>
		<%= submit_tag "LOGIN",:class => "btn  btn-block btn-lg btn-primary" %>
		</div>
	</div>
	</fieldset>
<% end %>