<% title "Oder products || TSHOP" %>
<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a onclick = "window.location='<%= url_for(action: 'index',controller: 'store') %>'">Home</a></li>
                <li><a onclick = "window.location='<%= url_for(action: 'index',controller: 'line_items') %>'">Cart</a></li>
                <li class="active"> Checkout</li>
            </ul>
        </div>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-7 col-xs-6 col-xxs-12 text-center-xs">
            <h1 class="section-title-inner"><span><i class="glyphicon glyphicon-shopping-cart"></i> Checkout</span></h1>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar col-xs-6 col-xxs-12 text-center-xs">
            <h4 class="caps"><a onclick = "window.location='<%= url_for(action: 'index',controller: 'store') %>'"><i class="fa fa-chevron-left"></i> Back to shopping </a></h4>
        </div>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12">
            <div class="row userInfo">
                <div class="col-xs-12 col-sm-12">
                  <%= form_for(@order, validate: true ) do |f| %>
                    <div class="w100 clearfix">
                        <div class="row userInfo">
                            <div class="col-lg-12">
                                <h2 class="block-title-2"> To add a new address, please fill out the form below. </h2>
                            </div>
                                <div class="col-xs-12 col-sm-12">
                                    <div class="form-group required">
                                        <%= f.label :name, raw("Full Name <sup>*</sup>") %>
                                        <%= f.text_field :name, size: 30, maxlength: 30,:class => "form-control" ,:placeholder => "Full Name" %>
                                    </div>
                                    <div class="form-group required">
                                        <%= f.label :address, raw("Address <sup>*</sup>") %> 
                                        <%= f.text_area :address, rows: 3, cols: 40,:class => "form-control", :placeholder => "Address" %>
                                    </div>
                                    <div class="form-group required">
                                        <%= f.label :email, raw("Email <sup>*</sup>") %>
                                        <%= f.email_field :email, size: 40, :class => "form-control" , :placeholder => "Email"%>
                                    </div>
                                    <div class="form-group required">
                                        <%= f.label :pay_type,raw("Pay Type <sup>*</sup>")%>
                                        <%= f.select :pay_type, Order::PAYMENT_TYPES,{prompt: 'Choose'}, {id: 'InputState',class: 'form-control'} %>
                                    </div>
                                </div>
                        </div>
                        <!--/row end-->

                    </div>
                    <div class="cartFooter w100">
                        <div class="box-footer">
                            <div class="pull-left"><a class="btn btn-default" onclick = "window.location='<%= url_for(action: 'index',controller: 'store') %>'"> <i
                                    class="fa fa-arrow-left"></i> &nbsp; Back to Shop </a></div>
                            <div class="pull-right">
                            <%= button_tag(type: 'submit', class: "btn btn-primary btn-small") do %>
                             Compelete Order &nbsp; <i class ='fa fa-arrow-circle-right'></i>
                            <% end %>
                            </div>
                        </div>
                    </div>
                    <!--/ cartFooter -->
                    <% end %>
                </div>
            </div>
            <!--/row end-->

        </div>
        <div class="col-lg-3 col-md-3 col-sm-12 rightSidebar">
            <div class="w100 cartMiniTable">
                <table id="cart-summary" class="std table">
                    <tbody>
                    <tr>
                        <td>Total products</td>
                        <td class="price"><%= @cart.line_items.count %></td>
                    </tr>
                    <!-- <tr style="">
                        <td>Shipping</td>
                        <td class="price"><span class="success">Free shipping!</span></td>
                    </tr>
                    <tr class="cart-total-price ">
                        <td>Total (tax excl.)</td>
                        <td class="price">$216.51</td>
                    </tr>
                    <tr>
                        <td>Total tax</td>
                        <td class="price" id="total-tax">$0.00</td>
                    </tr> -->
                    <tr>
                        <td> Total</td>
                        <td class=" site-color" id="total-price"><%= number_to_currency(@cart.total_price) %></td>
                    </tr>
                    </tbody>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!--  /cartMiniTable-->

        </div>
        <!--/rightSidebar-->

    </div>
    <!--/row-->

    <div style="clear:both"></div>
</div>
<!-- /.main-container-->
<div class="gap"></div>